# make the determination if we need to actually run or not by running commit-check against all the repos
#commitCheck check

#echo "*** RUN_BUILD: $RUN_BUILD ***"
[[ $RUN_BUILD =~ false ]] && exit 0

rm -rf $WORK_DIR
mkdir -p \
